<% if @matter.errors.any? %>
  <div id="error_explanation">
    
    <ul>
    <% @matter.errors.full_messages.each do |message| %>
        <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: @matter, local: true) do |form| %>
  <div class="form-group text-white">
    <%= form.label :title %><br>
    <%= form.text_field :title, class: 'form-control'  %>
  </div>
  <div class="form-group text-white">
    <%= form.label :place %><br>
    <%= form.text_field :place, class: 'form-control'  %>
  </div>
  <div class="form-group text-white">
    <%= form.label :description %><br>
    <%= form.text_area :description, class: 'form-control'  %>
  </div>
  <div class="form-group text-white">
    <%= form.label :start_time %><br>
    <%= form.datetime_field :start_time %>
  </div>
  <div class="form-group text-white">
    <%= form.label :finish_time %><br>
    <%= form.datetime_field :finish_time %>
  </div>
  <div class="form-group text-white">
    <%= form.label :image %><br>
    <%= form.file_field :image, class: 'filestyle' %>
  </div>

  <div class="actions">
    <%= form.submit '作成', class: 'btn btn-primary' %>
  </div>

<% end %>

<%= link_to 'Back', matters_path %>