<div class="container pt-3">
  <div class="row">
    <div class="col-lg-10 offset-lg-1">
      <!-- 検索フォーム -->
      <%= render 'search_form', url: matters_path %>
    </div>
  </div>

  <!-- 掲示板一覧 -->
