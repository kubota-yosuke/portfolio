<div id="follow_form">
  <% if current_user.following?(user) %>
    <%= link_to "フォロー中", {controller: :users,action: :unfollow,user_id: user.id}, method: :put, class:"btn btn-primary" %>
  <% else %>
    <%= link_to "フォローする", {controller: :users,action: :follow,user_id: user.id}, method: :put, class:"btn btn-secondary" %>
  <% end %>
</div>