<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group text-white">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control rounded-pill' %>
  </div>
  <div class="form-group text-white">
    <%= form.label :email %>
    <%= form.text_field :email, class: 'form-control rounded-pill' %>
  </div>
  <div class="form-group text-white">
    <%= form.label :user_type %>
    <%= form.select :user_type, User.user_types.keys.to_a, {} %>
  </div>
  <div class="form-group text-white">
    <%= form.label :image %><br>
    <%= form.file_field :image %>
  </div>
  <div class="form-group text-white">
    <%= form.label :password %><br />
    <%= form.password_field :password, class: 'form-control rounded-pill' %>
  </div>
  <div class="form-group text-white">
    <%= form.label :password_confirmation %><br />
    <%= form.password_field :password_confirmation, class: 'form-control rounded-pill' %>
  </div>
  <div class="actions">
    <%= form.submit '新規登録', class: 'btn btn-primary rounded-pill' %>
  </div>
<% end %>