<header class="fixed-top">
  <nav class="navbar navbar-expand-lg navigation navbar-light bg-light">
    <%= link_to root_path do %>
        <%= image_tag "logo.png", size: "150x50", class: "header-logo" %>
    <% end %>

    <button class="navbar-toggler" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav ml-auto main-nav align-items-center">

      <% if current_user %>
        <li class="nav-item dropdown dropdown-slide">

          <a href="#" class="nav-link" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" id="header-profile">
            <% if current_user.image.attached? %>
              <%= image_tag current_user.image, size: '40x40', class: 'rounded-circle mr15'%>
            <% else %>
              <%= image_tag 'sample', size: '40x40', class: 'rounded-circle mr15'%>
            <% end %>
          </a>
          
          <div class="dropdown-menu dropdown-menu-right">
            <div class="dropdown-item"><%= current_user.name%></div>
            <div class="dropdown-divider"></div>
            <%= link_to 'マイページ', current_user, class: 'dropdown-item' %>
            <% if current_user.cameraman? %>
              <%= link_to 'モデルを探す', matters_path, class: 'dropdown-item' %>
              <%= link_to 'ブックマーク一覧', likes_matters_path, class: 'nav-link' %>
            <% else %>
              <%= link_to 'カメラマンを募集', new_matter_path, class: 'dropdown-item' %>
            <% end %>
            <%= link_to 'ログアウト', :logout, method: :delete, class: 'dropdown-item' %>
          </div>
        </li>
      <% else %>
        <li class="nav-item dropdown dropdown-slide">
            <a href="#" class="nav-link" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" id="header-profile">
                <%= image_tag 'sample', size: '40x40', class: 'rounded-circle mr15'%>
            </a>
            <div class="dropdown-menu dropdown-menu-right">
                <%= link_to 'ログイン', :login, class: 'dropdown-item' %>

                <%= link_to '新規登録', new_user_path, class: 'dropdown-item' %>
            </div>
        </li>
       <% end %>
      </ul>
    </div>
  </nav>
</header>
