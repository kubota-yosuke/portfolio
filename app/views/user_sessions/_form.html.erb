
<%= form_with url: login_path, method: :post do |f| %>
  <div class="form-group text-white">
    <%= f.label :email %>
    <%= f.text_field :email, class: 'form-control rounded-pill' %>
  </div>
  <div class="form-group text-white">
    <%= f.label :password %>
    <%= f.password_field :password, class: 'form-control rounded-pill' %>
  </div>
  <div class="actions">
    <%= f.submit 'ログイン', class: 'btn btn-primary rounded-pill' %>
  </div>
<% end %>
<div class='text-center'>
  <%= link_to 'パスワードをお忘れの方はこちら', new_password_reset_path %>
</div>
