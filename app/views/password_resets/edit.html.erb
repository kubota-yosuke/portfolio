<div class="container">
  <div class="row">
    <div class=" col-md-10 offset-md-1 col-lg-8 offset-lg-2">
        <div class='text-center'>
            <h3 class="text-white">パスワードリセット</h3>
            <%= form_with model: @user, url: password_reset_path(@token), method: :put do |f| %>
                <div class="form-group text-white">
                    <%= f.label :"新しいパスワード" %>
                    <%= f.password_field :password, class: 'form-control rounded-pill' %>
                </div>
                <div class="form-group text-white">
                    <%= f.label :"新しいパスワード(確認用)" %>
                    <%= f.password_field :password_confirmation, class: 'form-control rounded-pill' %>
                </div>
                <div class="actions">
                    <%= f.submit '更新', class: 'btn btn-primary rounded-pill' %>
                </div>
            <% end %>
        </div>
    </div>
  </div>
</div>
