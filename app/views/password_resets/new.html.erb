<div class="container">
  <div class="row">
    <div class=" col-md-10 offset-md-1 col-lg-8 offset-lg-2">
        <div class='text-center'>
            <h3 class="text-white">パスワードリセット</h3>
            <%= form_with url: password_resets_path, local: true, method: :post do |form| %>
                <div class="form-group text-white">
                    <%= form.label :メールアドレス %>
                    <%= form.text_field :email, class: 'form-control rounded-pill' %>
                </div>
                <div class="actions">
                    <%= form.submit '送信', class: 'btn btn-primary rounded-pill' %>
                </div>
            <% end %>
        </div>
    </div>
  </div>
</div>